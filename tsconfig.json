{
	"compilerOptions": {
		"module": "system",
		"target": "es2017",
		"inlineSourceMap": true,
		"inlineSources": true,
		"strict": true,
		"baseUrl": "./",
		"rootDir": ".",
		"declaration": true,
		"declarationMap": true,
		"stripInternal": true,
		"incremental": true,
		"lib": [
			"dom",
			"esnext",
			"esnext.array",
			"esnext.asynciterable"
		],
		"outFile": "./build/index.js"
	},
	"exclude": [
		"**/build/**/*.ts",
		"**/bundle/**/*.ts",
		"**/make.ts"
	],
	"moduless": {
		"port": 7007,
		"verbose": true,
		// This script isn't actually needed, it's just used during testing
		// to see if external script URLs are loading correctly.
		"scripts": "https://cdn.jsdelivr.net/npm/meriyah@1.9.3/dist/meriyah.umd.min.js"
	}
}
